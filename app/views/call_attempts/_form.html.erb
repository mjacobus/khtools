<p><strong><%= outcome_label(@call_attempt.outcome) %></strong></p>

<%= simple_form_for([@territory, @phone, @call_attempt], local: true) do |f| %>
  <div class="inline-check-boxes special-legends soft-labels">
    <%= f.error_notification %>
    <% if @call_attempt.contacted? %>
      <hr>
      <%= f.input :name %>
      <hr>
      <%= f.input :gender, as: :radio_buttons, collection: CallAttempt::GENDERS.map { |gender| [gender_label(gender), gender] } %>
      <hr>
      <%= f.input :age, collection: [
        ['0-10,', 10],
        ['10-15', 15],
        ['15-20', 20],
        ['20-30', 30],
        ['30-40', 40],
        ['40-50', 50],
        ['50-60', 60],
        ['50+', 70],
      ] %>
      <hr>
      <%= render partial: '/boolean_radiobuttons', locals: { f: f, field: :has_children, allow_nil: true } %>
      <hr>
      <%= render partial: '/boolean_radiobuttons', locals: { f: f, field: :can_text, allow_nil: true } %>
      <hr>
      <%= render partial: '/boolean_radiobuttons', locals: { f: f, field: :can_call_again, allow_nil: true } %>
    <% end %>

      <hr>
    <%= render partial: '/boolean_radiobuttons', locals: { f: f, field: :called_annonymously, allow_nil: false } %>
    <hr>
    <%= f.input :notes %>
    <hr>
    <%= f.input :reachable_by %>
    <hr>

    <%= f.submit(class: 'btn btn-primary btn-block') %>
    <hr>
  </div>
<% end %>
