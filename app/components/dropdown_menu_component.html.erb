<div data-component="dropdown-menu" class="dropdown <%= container_classes %>">
  <button class="btn list-unstyled dropdown-toggle <%= classes %>" type="button" id="dropdownMenu2" data-bs-toggle="dropdown" aria-expanded="false">
    <i class="bi bi-<%= icon %>"></i>
    <%= title %>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
    <% items.each do |item| %>
      <li class="dropdown-item"> <%= item %></li>
    <% end %>
  </ul>
</div>
