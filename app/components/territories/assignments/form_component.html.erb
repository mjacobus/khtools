<%= simple_form_for(assignment, as: :assignment, url: target_url) do |f| %>
  <%= input_wrapper do %>
    <%= f.input :assignee_id, as: :select, collection: publishers, label: attribute_name(assignment, :assignee_id) %>
  <% end %>

  <%= input_wrapper do %>
    <%= f.input :campaign_id, as: :select, collection: preaching_campaigns, label: attribute_name(assignment, :campaign) %>
  <% end %>

  <% if assignment.id %>
    <%= input_wrapper do %>
      <%= f.input :assigned_at, label: attribute_name(assignment, :assigned_at) %>
    <% end %>

    <%= input_wrapper do %>
      <%= f.input :returned_at, label: attribute_name(assignment, :returned_at) %>
    <% end %>
  <% end %>

  <%= input_wrapper do %>
    <%= f.input :notes, label: attribute_name(assignment, :notes) %>
  <% end %>

  <%= input_wrapper do %>
    <%= f.submit(class: 'btn btn-primary mt-3 float-right', value: t('app.links.assign_territory')) %>
  <% end %>
<% end %>
