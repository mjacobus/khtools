<div class="territory position-relative">
  <%= render DropdownMenuComponent.new(type: :item_options) do |component| %>
    <% actions.each do |action| %>
      <% component.item do %>
        <%= action %>
      <% end %>
    <% end %>
  <% end %>

  <div class="row">
    <div class="col-sm-12 col-lg-12 territory-name mb-2 h5">
      <%= render attribute(:name) %>
    </div>
    <div class="col-sm-6 col-lg-6 small"><%= render attribute(:building_name) %></div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-lg-6 small"><%= render attribute(:address) %></div>
    <div class="col-sm-3 col-lg-3 small"><%= render attribute(:area) %></div>
  </div>
  <div class="row mt-3">
    <div class="col-sm-6 col-lg-6 small"><%= render attribute(:number_of_apartments) %></div>
    <div class="col-sm-6 col-lg-6 small">
      <%= render attribute(:preaching_methods) %>
      <div hidden><%= render attribute(:intercom_type) %> </div>
      <div hidden><%= render attribute(:letter_box_type) %></div>
      <div hidden><%= render attribute(:has_a_roof) %></div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-sm-6 col-lg-6 small"><%= render attribute(:phone_numbers) %></div>
    <div class="col-sm-6 col-lg-6 small"><%= render attribute(:phone_provider) %></div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-lg-6 small"><%= render attribute(:contacts_summary) %></div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-lg-6 small"><%= render attribute(:assignee) %></div>
    <div class="col-sm-6 col-lg-6 small"><%= render attribute(:assignment_dates) %></div>
  </div>
  <div class="row small mt-3">
    <div class="col-sm-12 col-lg-12 small"><%= render attribute(:notes) %></div>
  </div>
</div>
