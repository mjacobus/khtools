<%= simple_form_for(location, as: :location, url: target_url) do |f| %>
  <%= input_wrapper do %>
    <%= f.input :block_number, label: attribute_name(location, :block_number) %>
  <% end %>

  <%= input_wrapper do %>
    <%= f.input :address, label: attribute_name(location, :address) %>
  <% end %>

  <%= input_wrapper do %>
    <%= f.input :street_name, label: attribute_name(location, :street_name) %>
  <% end %>

  <%= input_wrapper do %>
    <%= f.input :number, label: attribute_name(location, :number) %>
  <% end %>

  <%= input_wrapper do %>
    <%= f.input :last_contacted_at,
      label: attribute_name(location, :last_contacted_at),
      as: :string,
      input_html: {
        type: 'date',
        value: location.last_contacted_at&.to_date&.to_fs(:db)
      }
    %>
  <% end %>

  <%= input_wrapper do %>
    <%= f.input :do_not_visit_at,
      label: attribute_name(location, :do_not_visit_at),
      as: :string,
      hint: "Se pediram para nÃ£o visitar, preencha a data do pedido",
      input_html: {
        type: 'date',
        value: location.do_not_visit_at&.to_date&.to_fs(:db)
      }
    %>
  <% end %>

  <%= input_wrapper do %>
    <%= f.input :latitude, label: attribute_name(location, :latitude) %>
  <% end %>

  <%= input_wrapper do %>
    <%= f.input :longitude, label: attribute_name(location, :longitude) %>
  <% end %>

  <%= input_wrapper do %>
    <%= f.input :notes, label: attribute_name(location, :notes) %>
  <% end %>

  <%= input_wrapper do %>
    <%= f.submit(class: 'btn btn-primary mt-3 float-right') %>
  <% end %>
<% end %>

