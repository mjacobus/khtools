<style>
.<%= bem('phone_number') %>, .<%= bem('first_attempt') %>, .<%= bem('second_attempt') %>, .<%= bem('third_attempt') %> {
  width: 12%;
  text-align: center;
}

table { margin-top: 10px; }
.<%= bem('territory_name') %> {
  font-weight: bold;
}

td {
  font-size: 15px;
  line-height: 24px;
}
</style>
<div class="<%= bem %>">
  <% phone_numbers_in_groups.each.with_index do |numbers, index| %>
    <div class="<%= bem('territory_name') %>"> <%= territory.name %></div>
    <div class="<%= bem('assignee') %>"> <%= territory.assignee&.name %></div>

    <table>
      <tr>
        <th class="<%= bem('phone_number') %>"><%= I18n.t('app.phone_list_spreadsheet.phone_number') %></th>
        <th class="<%= bem('first_attempt') %>"><%= I18n.t('app.phone_list_spreadsheet.date_of_first_attempt') %></th>
        <th class="<%= bem('second_attempt') %>"><%= I18n.t('app.phone_list_spreadsheet.date_of_second_attempt') %></th>
        <th class="<%= bem('third_attempt') %>"><%= I18n.t('app.phone_list_spreadsheet.date_of_third_attempt') %></th>
        <th class="<%= bem('notes') %>"><%= I18n.t('app.phone_list_spreadsheet.notes') %></th>
      </tr>
      <% numbers.each do |number| %>
        <tr>
          <td class="<%= bem('phone_number') %>"><%= number %></td>
          <td class="<%= bem('first_attempt') %>">&nbsp;</td>
          <td class="<%= bem('second_attempt') %>">&nbsp;</td>
          <td class="<%= bem('third_attempt') %>">&nbsp;</td>
          <td class="<%= bem('notes') %>">&nbsp;</td>
        </tr>
      <% end %>
    </table>
    <% unless index == last_index %>
      <%= page_break %>
    <% end %>
  <% end %>
</div>
