<%= render breadcrumb %>

<%= render DropdownMenuComponent.new(
  classes: ['btn-primary mb-2'],
  pull: :right
) do |component| %>
  <% component.item do %>
    <%= new_link %>
  <% end %>
<% end %>

<%= render PublicTalks::Talks::FilterComponent.new(params) %>

<% if showing_talks_since %>
  <div class="alert alert-primary" role="alert">
    <%= showing_talks_since %> <%= see_all_link %>
  </div>
<% end %>

<div class="index-list">
  <% grouped_by_week.each do |week, group| %>
    <div class="row">
      <% segregate(group) do |local, non_local| %>
        <% local.each do |talk| %>
          <div class="col-lg-6">
            <%= render PublicTalks::Talks::ListItemComponent.new(talk) %>
          </div>
        <% end %>

        <% non_local.each do |talk| %>
          <div class="col-lg-6">
            <%= render PublicTalks::Talks::ListItemComponent.new(talk) %>
          </div>
        <% end %>
      <% end %>
    <% group.each do |talk| %>
    <% end %>
    </div>
  <% end %>

  <%= render PaginationComponent.new(talks, position: :bottom) %>
</div>
