<div class="item <%= classes %>">
  <div>
    <div class="small">
      <%= icon('calendar-date') { l(talk.date, format: :short) } %>
    </div>
    <%= render DropdownMenuComponent.new do |component| %>
      <% if has_a_speaker? %>
        <% component.item do %>
          <%= speaker_link %>
        <% end %>
      <% end %>
      <% component.item do %>
        <%= show_link %>
      <% end %>
      <% component.item do %>
        <%= edit_link %>
      <% end %>
      <% component.item do %>
        <%= destroy_link %>
      <% end %>
    <% end %>
  </div>
  <div class="title">
    <%= icon(:book) { theme(talk) } %>
  </div>
  <div class="small">
    <div>
      <% if talk.speaker.present? %>
        <%= icon('person') { speaker_name(talk) } %>
      <% end %>
    </div>
    <div>
      <% if talk.congregation.present? %>
        <%= icon('shop') { talk.congregation.name } %>
      <% end %>
    </div>
    <% if talk.notes.present? %>
      <div class="extra-small mt-2">
        <%= icon('pencil') { content_tag(:em) { talk.notes } } %>
      </div>
    <% end %>
  </div>
</div>
